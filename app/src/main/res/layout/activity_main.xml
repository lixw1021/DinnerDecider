<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_plate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_plate" />

    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_plate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Click the decider"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_add_food"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_add_food"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="150dp"
        android:hint="Add new food"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_add_food"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btn_decider"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Add Food" />

    <Button
        android:id="@+id/btn_decider"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Decider"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom" />
</RelativeLayout>
